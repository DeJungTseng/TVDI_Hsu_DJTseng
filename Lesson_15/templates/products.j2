{% extends "_base.j2"%}
{% block title%}可愛可愛的鷹鷹{% endblock %}
{% block head %}{{super()}}{%endblock%}

{% block main%}
<div class="container">
    
    <table class="table">
        <thead>
            <tr>
              <th scope="col">編號</th>
              <th scope="col">城市</th>
              <th scope="col">地區</th>
              <th scope="col">國家</th>
              <th scope="col">圖片名</th>
            </tr>
          </thead>
        <tbody>
            {% for item in  items_on_page %}
                <tr>
                        {% for key in item %}
                            <td>{{item[key]}}</td>
                        {% endfor %}
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="container d-flex justify-content-center">
        <nav aria-label="Page navigation example" class="text-center">
            <ul class="pagination">
            {% if page > 1%}
              <li class="page-item"><a class="page-link" href="{{url_for('products',page=page-1)}}">Previous</a></li>
            {% endif %}
              <li class="page-item"><a class="page-link" href="#"><span>Page {{page}} of {{total_pages}} </span></a></li>

            {% if page < total_pages %}
                <li class="page-item"><a class="page-link" href="{{url_for('products',page=page+1)}}">Next</a></li>
            {% endif %}
            </ul>
          </nav>
    </div>
    
</div>

{% endblock %}